normalize-css()

K_WIDTH = 22px
K_HEIGHT = 22px

.map-container{
	.map-wrapper{
		form{
			margin-bottom: 0;
		}
		width: 100%
		height: 30em

		.myMarker{
			position: absolute
		  width: K_WIDTH
		  height: K_HEIGHT
		  left: -(K_WIDTH / 2)
		  top: -(K_HEIGHT / 2)

			border: 5px solid #f44336
			border-radius: K_HEIGHT
		  color: #3f51b5
			background: white
			text-align: center
			font-size: 16px
			font-weight: bold
			padding: 4px
		}
	}
}
