K_HEIGHT = 22px

.mapWrapper{
	width: 80%
	height: 30em

	.myMarker{
		position: absolute
	  width: K_WIDTH
	  height: K_HEIGHT
	  left: -(K_WIDTH / 2)
	  top: -(K_HEIGHT / 2)

		border: 5px solid #f44336
		border-radius: K_HEIGHT
	  color: #3f51b5
